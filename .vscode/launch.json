    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
			"request": "launch",
            "name": "Run Extension",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
            "preLaunchTask": "npm: compile",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}