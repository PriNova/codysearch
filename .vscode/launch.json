    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
			"request": "launch",
            "name": "Run Extension",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
            "program": "${workspaceFolder}/out/extension.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        }
    ]
}