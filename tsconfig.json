{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2022",
      "outDir": "dist",
      "lib": ["ES2022", "DOM"],
      "sourceMap": true,
      "rootDir": "src",
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
    ],
    "exclude": ["node_modules"]
  }
  